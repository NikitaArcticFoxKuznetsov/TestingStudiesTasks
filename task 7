SELECT Product.model, price
FROM Product, PC
WHERE Product.model = PC.model 
AND maker = 'B'
UNION
SELECT Product.model, price
FROM Product, Laptop
WHERE Product.model = Laptop.model 
AND maker = 'B'
UNION
SELECT Product.model, price
FROM Product, Printer
WHERE Product.model = Printer.model 
AND maker = 'B'
